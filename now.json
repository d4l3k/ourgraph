{
  "version": 2,
  "name": "ourgraph-ui",
  "public": false,
  "alias": "ourgraph.rice.sh",
  "build": {
    "env": {
      "DGRAPH_CRT": "@dgraph-crt",
      "DGRAPH_KEY": "@dgraph-key"
    }
  },
  "builds": [
    { "src": "ui/**/*.go", "use": "@now/go" },
    { "src": "ui/static/**/*", "use": "@now/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "ui/server.go" },
    { "src": "/static/(.*)", "dest": "ui/static/$1" },
    { "src": "/", "dest": "ui/static/index.html" }
  ]
}
